{% extends ':admin:admin_base.html.twig' %}

{% form_theme form ':admin:twig_theme.html.twig' %}

{% block content_title %}
    <i class="fa fa-users"></i>&nbsp; Members - Edit Member
{% endblock content_title %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% include ':admin:admin_alert_succes.html.twig' %}
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        {% include ':admin:admin_alert_error.html.twig' %}
    {% endfor %}
<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="body" id="collapse4">
                <ul role="tablist" class="nav nav-tabs" id="myTab">
                    <li class="{% if tab == 'update' %}active{% endif %}" role="presentation">
                        <a aria-expanded="false" aria-controls="update" data-toggle="tab" role="tab" id="update-tab" href="#update">Update Member</a>
                    </li>
                    <li class="{% if tab == 'info' %}active{% endif %}" role="presentation">
                        <a aria-expanded="true" aria-controls="info" data-toggle="tab" role="tab" id="info-tab" href="#info">Other Information</a>
                    </li>
                    <li class="{% if tab == 'action' %}active{% endif %}" role="presentation">
                        <a aria-expanded="true" aria-controls="action" data-toggle="tab" role="tab" id="action-tab" href="#action">Other Action</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div aria-labelledby="update-tab" id="update" class="tab-pane fade {% if tab == 'update' %}in active{% endif %}" role="tabpanel">
                        <div class="body collapse in" id="div-1" aria-expanded="true" style="">
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
                            <div class="form-group {% if form_errors(form.username) %}has-error{% endif %}">
                                {{ form_label(form.username, null, {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.username) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.username) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.fullName) %}has-error{% endif %}">
                                {{ form_label(form.fullName, null, {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.fullName) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.fullName) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.email) %}has-error{% endif %}">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.email) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.email) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.plain_password) %}has-error{% endif %}">
                                {{ form_label(form.plain_password, 'Password', {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.plain_password, {'attr': {'class': 'form-control'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.plain_password) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.plain_password) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.country) %}has-error{% endif %}">
                                {{ form_label(form.country, null, {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.country, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.country) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.country) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.membership) %}has-error{% endif %}">
                                {{ form_label(form.membership, null, {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.membership, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.membership) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.membership) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.sponsor) %}has-error{% endif %}">
                                {{ form_label(form.sponsor, null, {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.sponsor, {'attr': {'class': 'form-control'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.sponsor) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.sponsor) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.wallet.sum) %}has-error{% endif %}">
                                {{ form_label(form.wallet.sum, 'Balance', {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.wallet.sum, {'attr': {'class': 'form-control', 'placeholder': '0.000'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.wallet.sum) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.wallet.sum) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.purchaseWallet.sum) %}has-error{% endif %}">
                                {{ form_label(form.purchaseWallet.sum, 'Purchase Balance', {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.purchaseWallet.sum, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.purchaseWallet.sum) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.purchaseWallet.sum) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.surveyWalletBalance.sum) %}has-error{% endif %}">
                                {{ form_label(form.surveyWalletBalance.sum, 'Survey Hold Balance', {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.surveyWalletBalance.sum, {'attr': {'class': 'form-control', 'placeholder': '0.000'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.surveyWalletBalance.sum) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.surveyWalletBalance.sum) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            <div class="form-group {% if form_errors(form.surveyWalletAvailableBalance.sum) %}has-error{% endif %}">
                                {{ form_label(form.surveyWalletAvailableBalance.sum, 'Survey Available Balance', {'label_attr': {'class': 'control-label col-lg-4'}}) }}
                                <div class="col-lg-4">
                                    {{ form_widget(form.surveyWalletAvailableBalance.sum, {'attr': {'class': 'form-control', 'placeholder': '0.000'}}) }}
                                    {#<div style="position: fullName; margin-top: -27px; margin-left: 300px">days</div>#}
                                    {% if form_errors(form.surveyWalletAvailableBalance.sum) %}
                                        <span id="required2-error" class="help-block">
                                            {{ form_errors(form.surveyWalletAvailableBalance.sum) }}
                                        </span>
                                    {% endif %}
                                </div>
                            </div><!-- /.form-group -->

                            {{ form_rest(form) }}
                            <div class="form-group">
                                <div class="col-lg-4"></div>
                                <div class="col-lg-4">
                                    <input type="submit" class="btn btn-primary" value="Save">
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                    <div aria-labelledby="info-tab" id="info" class="tab-pane fade {% if tab == 'info' %}in active{% endif %}" role="tabpanel">
                        <div class="body collapse in" id="div-1" aria-expanded="true" style="">
                            dss
                        </div>
                    </div>
                    <div aria-labelledby="action-tab" id="action" class="tab-pane fade {% if tab == 'action' %}in active{% endif %}" role="tabpanel">
                        <div class="body collapse in" id="div-1" aria-expanded="true" style="">
                            dss
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock content %}