{% extends ':admin:admin_base.html.twig' %}

{% form_theme form ':admin:twig_theme.html.twig' %}

{% block content_title %}
    <i class="fa fa-cogs"></i>&nbsp; Blog - Edit Post
{% endblock content_title %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        {% include ':admin:admin_alert_succes.html.twig' %}
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        {% include ':admin:admin_alert_error.html.twig' %}
    {% endfor %}
    <div class="row">
        <div class="col-lg-12">
            <div class="body" id="collapse4">
                <div class="box">
                    <header>
                        <div class="icons">
                            <i class="fa fa-edit"></i>
                        </div>
                        <h5>Edit Post</h5>
                    </header>
                    <div id="div-1" class="body collapse in" style="" aria-expanded="true">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
						<div class="form-group {% if form_errors(form.title) %}has-error{% endif %}">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'control-label col-lg-1'}}) }}
                            <div class="col-lg-11">
                                {{ form_widget(form.title, {'attr': {'rows': '20'}}) }}
                                {% if form_errors(form.title) %}
                                    <span id="required2-error" class="help-block">{{ form_errors(form.title) }}</span>
                                {% endif %}
                            </div>
                        </div><!-- /.form-group -->
                        <div class="form-group {% if form_errors(form.text) %}has-error{% endif %}">
                            {{ form_label(form.text, null, {'label_attr': {'class': 'control-label col-lg-1'}}) }}
                            <div class="col-lg-11">
                                {{ form_widget(form.text, {'attr': {'rows': '20'}}) }}
                                {% if form_errors(form.text) %}
                                    <span id="required2-error" class="help-block">{{ form_errors(form.text) }}</span>
                                {% endif %}
                            </div>
                        </div><!-- /.form-group -->
                        {{ form_rest(form) }}
                        <div class="form-group">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-4">
                                <input type="submit" class="btn btn-primary" value="Save">
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}

{% block js %}
    <script type="text/javascript">
        {{ tinymce_init() }}
    </script>
{% endblock js %}