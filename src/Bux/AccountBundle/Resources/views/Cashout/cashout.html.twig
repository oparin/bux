{% extends '::office_base.html.twig' %}

{% form_theme form ':form:fields.html.twig' %}

{% block iconbar %}
    {#{% include 'BuxAccountBundle::iconbar.html.twig' %}#}
{% endblock iconbar %}

{% block content %}
    <div class="columns clear bt-space20">
        {% include 'BuxAccountBundle::blog_menu.html.twig' %}

        <!-- DASHBOARD - RIGHT COLUMN -->
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="notification note-success">
                <a href="#" class="close" title="Close notification">close</a>
                <p><strong>{{ flashMessage }}</strong></p>
            </div>
        {% endfor %}

        <!-- DASHBOARD - RIGHT COLUMN -->
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="notification note-error">
                <a href="#" class="close" title="Close notification">close</a>
                <p><strong>{{ flashMessage }}</strong></p>
            </div>
        {% endfor %}

        <div class="col3-4 lastcol">
            <!-- CONTENT BOX - DATATABLE -->
            <div class="content-box">
                <div class="box-body">
                    <div class="box-header clear">
                        <h2>{{ 'frontend.account.menu.withdraw_your_earnings'|trans }}</h2>
                    </div>

                    <div class="box-wrap clear">
                        {{ form_start(form, {'attr': {'class': 'validate-form form bt-space15'} }) }}
                        <div class="columns clear bt-space15">
                            <div class="col2-3">
                                <div class="form-field clear">
                                    {{ form_label(form.method, 'frontend.account.add_funds.method'|trans, {'label_attr': {'class': 'form-label size-80 fl-space2'} }) }}
                                    {{ form_widget(form.method, {'attr': {'class': 'required list fl-space2'} }) }}
                                    {% if form_errors(form.method) %}
                                        <label class="error form-error">{{ form_errors(form.method) }}</label>
                                    {% endif %}
                                </div><!-- /.form-field -->
                            </div>
                        </div>

                        {{ form_rest(form) }}
                        <div class="form-field clear" style="float: left; margin-left: 90px">
                            <input type="submit" class="button blue fr" value="{{ 'frontend.account.action.send'|trans }}" />
                        </div><!-- /.form-field -->
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}