<script type="text/javascript">
    function setPause(url, id)
    {
        $.ajax({
            type: "POST",
            url: url
        })
        .done(function(msg) {
            if (msg == 'start') {
                $('#pause_' + id).html("{{ 'frontend.account.advertiser.table.pause'|trans }}");
            }
            if (msg == 'pause') {
                $('#pause_' + id).html("{{ 'frontend.account.advertiser.table.start'|trans }}");
            }
        });
    }
</script>