{% extends '::office_base.html.twig' %}

{% form_theme form _self %}

{% block iconbar %}
    {% include 'BuxAccountBundle::iconbar.html.twig' %}
{% endblock iconbar %}

{% block content %}
    <div class="columns clear bt-space20">
        {% include 'BuxAccountBundle::blog_menu.html.twig' %}

        <!-- DASHBOARD - RIGHT COLUMN -->
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="notification note-success">
                <a href="#" class="close" title="Close notification">close</a>
                <p><strong>{{ flashMessage }}</strong></p>
            </div>
        {% endfor %}

        <!-- DASHBOARD - RIGHT COLUMN -->
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="notification note-error">
                <a href="#" class="close" title="Close notification">close</a>
                <p><strong>{{ flashMessage }}</strong></p>
            </div>
        {% endfor %}

        <div class="col3-4 lastcol">
            <!-- CONTENT BOX - DATATABLE -->
            <div class="content-box">
                <div class="box-body">
                    <div class="box-header clear">
                        <h2>{{ 'frontend.account.menu.rent_referrals'|trans }}</h2>
                    </div>

                    <div class="box-wrap clear">
                        {{ form_start(form, {'attr': {'class': 'validate-form form bt-space15'} }) }}
                        <div class="columns clear bt-space15">
                            <div class="col2-3">
                                <div class="form-field clear">
                                    {{ form_label(form.package, 'frontend.account.buy_referrals.item'|trans, {'label_attr': {'class': 'form-label size-100 fl-space2'} }) }}
                                    {{ form_widget(form.package, {'attr': {'class': 'required list fl-space2'} }) }}
                                    {% if form_errors(form.package) %}
                                        <label class="error form-error">{{ form_errors(form.package) }}</label>
                                    {% endif %}
                                </div><!-- /.form-field -->
                            </div>
                        </div>
                        <div class="columns clear bt-space15">
                            <div class="col2-3">
                                <div class="form-field clear">
                                    <label class="form-label size-100 fl-space2">{{ 'frontend.account.buy_referrals.purchase_balance'|trans }}</label>
                                    <input type="text" disabled class="text fl-space2" value="{{ app.user.purchaseWallet.sum }} $">
                                </div><!-- /.form-field -->
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        <div class="form-field clear" style="float: left; margin-left: 139px">
                            <input type="submit" class="button blue fr" value="{{ 'frontend.account.action.buy_now'|trans }}" />
                        </div><!-- /.form-field -->
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}