{% block body %}
<div id="main">

    <!-- breadcrumb -->
    <div id="breadcrumbs">
        <img width="16" height="16" class="bread-icon" src="{{ asset('lib/versatile/images/home-icon.png') }}">
        <div class="breadcrumbs">
            <a href="{{ path('home') }}">Home</a>
        </div>
    </div><!-- breadcrumb -->

    <div class="content">
        <div class="post">
            <div class="sysform" id="contactform">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" id="register-form">
                    <div style="clear: both"></div>
                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.email) }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.email, {'attr': {'class': 'required input txt'}}) }}
                        </div>
                        {% if form_errors(form.email) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.email) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.username) }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.username, {'attr': {'class': 'required input txt'}}) }}
                        </div>
                        {% if form_errors(form.username) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.username) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.plainPassword.first) }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'required input txt'}}) }}
                        </div>
                        {% if form_errors(form.plainPassword.first) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.plainPassword.first) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.plainPassword.second, 'Repeat password:') }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'required input txt'}}) }}
                        </div>
                        {% if form_errors(form.plainPassword.second) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.plainPassword.second) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.fullName, 'Full Name:') }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.fullName, {'attr': {'class': 'input txt'}}) }}
                        </div>
                        {% if form_errors(form.fullName) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.fullName) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.country, 'Country:') }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.country, {'attr': {'class': 'required input txt', 'style': 'width: 242px'}}) }}
                        </div>
                        {% if form_errors(form.country) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.country) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 135px">
                            {{ form_label(form.captcha, 'Calculate ', {'label_attr': {'class': 'captcha_label'}}) }}
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.captcha, {'attr': {'class': 'required input txt'}}) }}
                        </div>
                        {% if form_errors(form.captcha) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.captcha) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <p>
                        <div style="float: left; width: 130px">
                            <a href="#modal-label" class="label modal-link">
                                {{ form_label(form.terms, 'Terms & Conditions'|trans, {'label_attr': {'class': ''}}) }}
                            </a>
                        </div>
                        <div style="float: left">
                            {{ form_widget(form.terms, {'attr': {'class': 'required input txt'}}) }}
                        </div>
                        {% if form_errors(form.terms) %}
                            <div style="padding-left: 375px; color: red">
                                {{ form_errors(form.terms) }}
                            </div>
                        {% endif %}
                    </p>
                    <div style="clear: both"></div>

                    <!-- MODAL WINDOW -->
                    <div id="modal-label" class="modal-window modal-800" style="">
                        {{ page|raw }}
                        {#test#}
                    </div>

                    {{ form_rest(form) }}
                    <div style="clear: both"></div>
                    <div style="margin-top: 10px">
                        {#<input type="submit" value="{{ 'registration.submit'|trans }}" />#}
                        <a onclick="jQuery('#register-form').submit();" class="button small" style="margin-left: 135px">
                            <span>{{ 'registration.submit'|trans }}</span>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function getRandomArbitary(min, max)
    {
        return Math.ceil(Math.random() * (max - min) + min);
    }

    $(document).ready(function() {
        var a = getRandomArbitary(0, 10);
        var b = getRandomArbitary(0, a);
        var c = getRandomArbitary(0, 10);
        var result = a - b + c;
        $('.captcha_label').html('Calculate (' + a + '-' + b + '+' + c + ')');
        $('.captcha').val(result);
    });
</script>
